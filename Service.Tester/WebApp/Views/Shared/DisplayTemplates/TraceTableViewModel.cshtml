@model WebApp.Models.TraceTable.TraceTableViewModel

@{
    ViewData["Title"] = "TraceTableViewModel";
}

<h2>Создание задания трассировочная таблица</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="TraceTable">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceCode" class="control-label"></label>
                <input asp-for="SourceCode" class="form-control" />
                <span asp-validation-for="SourceCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BreakPointLine" class="control-label"></label>
                <input asp-for="BreakPointLine" class="form-control" />
                <span asp-validation-for="BreakPointLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
