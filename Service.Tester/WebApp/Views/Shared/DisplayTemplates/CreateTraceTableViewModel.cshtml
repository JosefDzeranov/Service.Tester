@using ProblemProcessor
@model WebApp.Models.TraceTable.CreateTraceTableViewModel

@{
    ViewData["Title"] = "CreateTraceTableViewModel";
}

<h2>Создание задания трассировочная таблица</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="TraceTable">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea style="height: 80px" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceCodeForCheck" class="control-label">Код для проверки программы</label>
                <textarea style="height: 250px" asp-for="SourceCodeForCheck" class="form-control"></textarea>
                <span asp-validation-for="SourceCodeForCheck" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceCode" class="control-label">Код программы</label>
                <textarea style="height: 250px" asp-for="SourceCode" class="form-control"></textarea>
                <span asp-validation-for="SourceCode" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Type" value="@ProblemTypes.TraceTable" type="hidden" />
            </div>

            <table class="table trace-table" name ="TableData">
               
            </table>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}