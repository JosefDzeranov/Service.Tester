@model WebApp.Models.Problemset.ProblemTypeViewModel

@{
    ViewData["Title"] = "SelectProblemType";
}

<h2>Выберите тип создаваемой задачи:</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">Типы задач</label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Types"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Выбрать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
